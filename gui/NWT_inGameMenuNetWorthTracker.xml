<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="NWT_inGameMenuNetWorthTracker">
    <GuiElement profile="fs25_menuContainer">
        <GuiElement profile="fs25_menuHeaderPanel">
            <Bitmap profile="fs25_menuHeaderIconBg">
                <Bitmap profile="NWT_menuIcon"/>
            </Bitmap>
            <Text profile="NWT_menuHeaderText" text="$l10n_ui_header_title" />
        </GuiElement>
        <BoxLayout profile="fs25_subCategorySelectorTabbedBox" id="subCategoryBox">
              <Button profile="fs25_subCategorySelectorTabbedTab" id="inGameMenuNetWorth" text="$l10n_ui_farm_value">
                      <ThreePartBitmap profile="fs25_subCategorySelectorTabbedTabBg" name="background"/>
              </Button>
              <Button profile="fs25_subCategorySelectorTabbedTab" id="inGameMenuNetWorthHistory" text="$l10n_ui_farm_value_history">
                      <ThreePartBitmap profile="fs25_subCategorySelectorTabbedTabBg" name="background"/>
              </Button>
        </BoxLayout>

        <ThreePartBitmap profile="fs25_lineSeparatorTopHighlighted" position="0px -57px" />
        <MultiTextOption profile="fs25_subCategorySelectorTabbed" id="subCategoryPaging" position="0px -10px" onClick="updateSubCategoryPages" />

        <GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="inGameMenuNetWorthPage" name="layout">
            <GuiElement profile="fs25_statisticsHeaderBox">
                <Button profile="NWT_inGameMenuHeader" position="20px 0px" size="380px 32px" text="$l10n_ui_header_lineitem" onClick="onClickLineItemSort">
                    <Bitmap profile="fs25_vehiclesHeaderIconSortAscending" visible="false" position="-10px 0px" id="iconLineItemAscending" />
                    <Bitmap profile="fs25_vehiclesHeaderIconSortDescending" visible="false" position="-10px 0px" id="iconLineItemDescending" />
                </Button>
                <Button profile="NWT_inGameMenuHeader" position="400px 0px" size="400px 32px" text="$l10n_ui_header_category" onClick="onClickCategorySort">
                    <Bitmap profile="fs25_vehiclesHeaderIconSortAscending" visible="false" position="-10px 0px" id="iconCategoryAscending" />
                    <Bitmap profile="fs25_vehiclesHeaderIconSortDescending" visible="false" position="-10px 0px" id="iconCategoryDescending" />
                </Button>
                <Button profile="NWT_inGameMenuHeader" position="800px 0px" size="400px 32px" text="$l10n_ui_header_details" handleFocus="false" />
                <Button profile="NWT_inGameMenuHeaderRight" position="1250px 0px" size="280px 32px" text="$l10n_ui_header_value" onClick="onClickValueSort">
                    <Bitmap profile="fs25_vehiclesHeaderIconSortAscending" visible="false" position="-10px 0px" id="iconValueAscending" />
                    <Bitmap profile="fs25_vehiclesHeaderIconSortDescending" visible="false" position="-10px 0px" id="iconValueDescending" />
                </Button>
            </GuiElement>

            <SmoothList profile="NWT_list" size="100% 550px" id="entryTable" >
                <ListItem profile="NWT_listItem" >
                    <Text profile="NWT_rowCellLeft" position="20px 0px" size="300px 20px" name="entryTitle"/>
                    <Text profile="NWT_rowCellLeft" position="400px 0px" size="300px 20px" name="entryCategory"/>
                    <Text profile="NWT_rowCellLeft" position="800px 0px" size="500px 20px" name="entryDetails"/>
                    <Text profile="NWT_rowCellRight" position="-20px 0px" size="500px 20px" name="entryAmount"/>
                </ListItem>
            </SmoothList>

            <ThreePartBitmap profile="NWT_inGameMenuSlider" >
                <Slider profile="fs25_listSlider" dataElementId="entryTable"/>
            </ThreePartBitmap>
            <GuiElement profile="NWT_inGameMenuFooterBox">

                <ThreePartBitmap profile="fs25_lineSeparatorTop" position="0px 50px"/>
                <Text profile="NWT_inGameMenuFooter" position="20px 85px" text="$l10n_table_cat_cash"/>
                <Text profile="NWT_inGameMenuFooterRight" position="-20px 85px" id="cashTotalValue"/>

                <Text profile="NWT_inGameMenuFooter" position="20px 65px" text="$l10n_table_cat_equipment"/>
                <Text profile="NWT_inGameMenuFooterRight" position="-20px 65px" id="equipmentTotalValue"/>

                <Text profile="NWT_inGameMenuFooter" position="20px 45px" text="$l10n_table_cat_property"/>
                <Text profile="NWT_inGameMenuFooterRight" position="-20px 45px" id="propertyTotalValue"/>

                <Text profile="NWT_inGameMenuFooter" position="20px 25px" text="$l10n_table_cat_inventory"/>
                <Text profile="NWT_inGameMenuFooterRight" position="-20px 25px" id="inventoryTotalValue"/>

                <ThreePartBitmap profile="fs25_lineSeparatorTop" position="0px -40px"/>

                <Text profile="NWT_inGameMenuFooter" position="20px -5px" text="$l10n_ui_footer_total"/>
                <Text profile="NWT_inGameMenuFooterRight" position="-20px -5px" id="netWorthTotalValue"/>
            </GuiElement>
         </GuiElement>

         <GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="inGameMenuNetWorthHistoryPage" name="layout">
            <GuiElement profile="fs25_statisticsHeaderBox">
                <Button profile="NWT_inGameMenuHeader" position="20px 0px" size="380px 32px" text="$l10n_ui_header_day" handleFocus="false"/>
                <Button profile="NWT_inGameMenuHeaderRight" position="1250px 0px" size="280px 32px" text="$l10n_ui_header_net_worth" handleFocus="false"/>
            </GuiElement>

            <SmoothList profile="NWT_list" size="100% 550px" id="historyTable" >
                <ListItem profile="NWT_listItem" >
                    <Text profile="NWT_rowCellLeft" position="20px 0px" size="300px 20px" name="historyDay"/>
                    <Text profile="NWT_rowCellRight" position="-20px 0px" size="500px 20px" name="historyAmount"/>
                </ListItem>
            </SmoothList>

            <ThreePartBitmap profile="NWT_inGameMenuSlider" >
                <Slider profile="fs25_listSlider" dataElementId="historyTable"/>
            </ThreePartBitmap>

         </GuiElement>

    </GuiElement>
</GUI>
